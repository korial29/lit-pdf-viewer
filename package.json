{
  "name": "lit-pdf-viewer",
  "license": "MIT",
  "version": "1.0.0",
  "dependencies": {
    "lit": "^2.2.2",
    "pdfjs-dist": "^2.13.216"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing-helpers": "^2.1.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vitest/ui": "^0.8.1",
    "c8": "^7.11.0",
    "esbuild": "^0.14.34",
    "esbuild-node-externals": "^1.4.1",
    "esbuild-plugin-copy": "^1.3.0",
    "esbuild-sass-plugin": "^2.2.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-prettier": "^3.4.1",
    "jsdom": "^19.0.0",
    "pdfjs": "^2.4.7",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2",
    "typescript-plugin-css-modules": "^3.4.0",
    "vite": "^2.9.0",
    "vitest": "^0.8.1"
  },
  "scripts": {
    "start": "cp -r node_modules/pdfjs-dist www && cp -r assets/fonts www && cp -r assets/style www/style && node ./serve.js",
    "build": "node ./build.js",
    "lint:eslint": "eslint . --ext .js,.ts",
    "format:eslint": "eslint . --ext .js,.ts --fix",
    "lint:prettier": "prettier --check \"**/*.(js|ts)\"",
    "format:prettier": "prettier \"**/*.{js,ts}\" --write",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm run lint:prettier && npm run lint:eslint && npm run lint:tsc",
    "format": " npm run format:prettier && npm run format:eslint",
    "test": "vitest run --coverage",
    "test:ci": "vitest run --coverage",
    "test:update-snapshots": "vitest --update",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch"
  }
}
